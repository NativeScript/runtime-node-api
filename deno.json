{
  "app": {
    "name": "NativeScript for macOS",
    "identifier": "com.nativescript.AppKit",
    "entryPoint": "test/spritekit.js",
    "assets": "./assets",
    "icon": "./assets/NativeScript.icns",
    "version": "0.1.0"
  },

  "tasks": {
    "build-libffi": "deno run -A scripts/build_libffi.ts",
    "build": "deno run -A scripts/build.ts",
    "bench": "node test/main.js",
    "deno": "../deno/target/release/deno run -A",
    "bundle": "deno run -A --unstable scripts/bundler.ts",
    "open-bundle": "open \"NativeScript for macOS.app\""
  },

  "fmt": {
    "exclude": ["build", "libffi", "node_modules", "metadata"]
  }
}
